				<view class="form-btn">
					<button class="in-btn" type="default">加入我们</button>
				</view>
			</view>
			<view class="code-input al">
				<view class="al-text">你已成功加入团队</view>
				<view class="al-btn">3秒后前往购买页</view>
			</view>
		</view>
