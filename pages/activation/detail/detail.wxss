.container.on{
	width: 100%;
	height: 100vh;
	overflow: hidden;
}
.main{
  width: 660rpx;
  margin: 0rpx auto 0;
	padding-top: 20rpx;
}
.banner{
  width: 100%;
  max-height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.banner image{
	display: block;
  width: 100%;
  height: 100%;
}
.choiceGift{
  margin-top: 50rpx;
}
.choiceGift:after{  
    content:"";  
    display:block;    
    clear:both;  
} 
.choiceGift_title{
  display: flex;
  align-items: center;
}
.choiceGift_title image{
  width: 34rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.choiceGift_title text{
  display: inline;
  font-size: 28rpx;
}
.choiceGift_content{
  margin-top: 38rpx;
}
.choiceGift_btn{
  width: 314rpx;
  height: 74rpx;
  box-sizing: border-box;
  border: 2rpx solid #ececec;
  text-align: center;
  line-height: 70rpx;
  font-size: 20rpx;
  color: #84888a;
  margin-bottom: 26rpx;
  border-radius: 16rpx;
}
.choiceGift_btn.active{
  border: 2rpx solid #000;
  color: #000;
}
.choiceGift_content .choiceGift_btn:nth-child(2n+1){
  float: left
}
.choiceGift_content .choiceGift_btn:nth-child(2n){
  float: right;
}
.wares_main{
  width: 100%;
  margin-top: 20rpx;
}
.wares_title{
  width: 100%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.wares_title image{
   width: 15rpx; 
   height: 42rpx; 
   margin-right: 16rpx;
   margin-left: 10px;
}

.bottom{
  width: 100%;
  height: 132rpx;
  padding: 0 46rpx;
  border-top: 1rpx solid #f5f5f5;
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom_buytext{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.bottom_buytext text{
  font-size: 24rpx;
  color: #7a7a7a;
}
.bottom_buytext view{
  display: flex;
  align-items: flex-start;
}
.bottom_buytext view view:first-child{
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #7a7a7a;
}
.bottom_buytext view view:last-child{
  line-height: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
	color: #14CCBA;
}
.bottom_buybtn{
  width: 224rpx;
  height: 80rpx;
  background: #14CEBC;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 20rpx;
  border: 2rpx solid #14CEBC;
  margin: 0;
}
.wares_box{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  background: rgba(0, 0, 0, .5);
  top: 0;
}
.wares_details{
  width: 100%;
  height: 880rpx;
  position: absolute;
  bottom: 0;
  background: #f4f4f4;
  border-radius: 30rpx 30rpx 0 0;
}
.wares_details_img{
  width: 290rpx;
  height: 290rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  left: 230rpx;
  top: -145rpx;
  overflow: hidden;
}
.wares_details_img image{
  width: 290rpx;
  height: 290rpx;
}
.wares_details_title{
  width: 665rpx;
  margin: 0 auto;
  margin-top: 165rpx;
  border-bottom: 1rpx solid #efefef;
}
.descript{
	display: block;
	padding-bottom: 30rpx;
	font-size: 28rpx;
	line-height: 44rpx;
	color: #000000;
}
.wares_details scroll-view{
  width: 665rpx;
  height: 715rpx;
  margin: 0 auto;
}
.wares_details scroll-view view{
  width: 100%;
  float: left;
}
.wares_details scroll-view image{
  display: block;
  width: 665rpx;
}
.shut{
  position: absolute;
  left: 40rpx;
  top: 40rpx;
}
.shut image{
  width: 40rpx;
  height: 40rpx;
}
.buy-shop-list{
	width: 100%;
	padding-top: 30rpx;
}
.shop-item{
	width: 306rpx;
	box-sizing: border-box;
	border:1px solid #CCCCCC;
	border-radius: 20rpx;
	margin-bottom: 50rpx;
	position: relative;
}
.shop-item.on{
	border-color:#03D0BC;
}
.shop-item:nth-child(2n){
	float: right;
}
.shop-item:nth-child(2n+1){
	float: left;
}
.shop-item .shop-img{
	width: 100%;
	height: 200rpx;
	box-sizing: border-box;
	padding: 20rpx 30rpx;
}
.shop-item .shop-img image{
	display: block;
	width: 100%;
	height: 100%;
}
.shop-txt{
	text-align: center;
	font-size: 24rpx;
	box-sizing: border-box;
	padding: 0 20rpx;
	margin-bottom: 20rpx;
	width: 100%; 
	display: -webkit-box !important; 
	word-break: break-all; 
	text-overflow: ellipsis; 
	overflow: hidden; 
	-webkit-box-orient: vertical; 
	-webkit-line-clamp:1;
}
.shop-add-btn{
	width: 100%;
	height: 80rpx;
	border-top: 1px solid #CCCCCC;
	line-height: 80rpx;
	font-size: 40rpx;
	display: flex;
	justify-content:center;
}
.add-btn{
	flex: 1;
	text-align: center;
	box-sizing: border-box;
	color: #03D0BC;
}
.add-btn.jd{
	border-right: 1px solid #CCCCCC;
	color: #666666;
}
.add-num{
	position: absolute;
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	background: #03D0BC;
	color: #FFFFFF;
	text-align: center;
	line-height: 48rpx;
	font-size: 30rpx;
	right: -25rpx;
	top:-25rpx;
	text-indent: -3rpx;
}