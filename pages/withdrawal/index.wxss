.drawal-header{
	width: 100%;
	padding-top: 40rpx;
}
.drawal-top{
	width: 680rpx;
	margin: 0 auto;
	background: #F2F2F2;
	display: flex;
	font-size: 28rpx;
	line-height: 28rpx;
	padding: 30rpx 20rpx;
	box-sizing: border-box;
}
.d-top-l{
	padding-right: 20rpx;
}
.d-top-r text{
	display: block;
}
.d-top-r .yh{
	color: #0b24de;
}
.d-top-r .ts{
	padding-top: 20rpx;
	color: #989898;
}
.drawal-center{
	width: 680rpx;
	margin: 0 auto;
}
.dc-title{
	display: block;
	font-size: 28rpx;
	padding-top: 40rpx;
}
.dc-monney{
	width: 100%;
	height: 36rpx;
	font-size: 32rpx;
	line-height: 36rpx;
	position: relative;
	padding: 40rpx 0;
}
.dc-tit{
	position: absolute;
	left: 5rpx;
	top: 50%;
	transform: translateY(-50%);
}
.dc-input{
	box-sizing: border-box;
	width: 100%;
	height: 36rpx;
	line-height: 36rpx;
	min-height: 36rpx;
	padding-left: 40rpx;
}
.dc-ye{
	display: block;
	font-size: 28rpx;
	line-height: 28rpx;
	color: #989898;
	padding-top: 10rpx;
}
.form-btn{
	padding: 80rpx 0 10rpx;
}
.text-tip{
	text-align: center;
	font-size: 28rpx;
	color: #989898;
}